<%- include('header') -%>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="alert alert-danger">
                Are you sure
            </div>
            <p>Are you sure you want to delete the user <strong><%= users.username %></strong> ? All of the following related items will be deleted: </p>
            
            <h4>User: <%= users.username %></h4>
        </div>

    </div>
    <form action="/delete/<%= users.id %>" method="post">
        <div class="form-group text-center align-items-center justify-content-center mt-4 mb-0">
            <input type="submit" class="btn btn-danger" value="Delete">
            <a href="/change/<%= users.id %>" class="btn btn-secondary">No, take me back</a>
            
        </div>
    </form>
</div>




<%- include('footer') -%>



