<%- include('header') -%> 

<div class="container">
    <h2 class="mt-5 mb-3">Modifier des Utilisateurs</h2>

    <form action="/uschange/<%= users.id %>" method="post">
     <div class="mb-3">
       <label for="name" class="form-label">Nom:</label>
       <input  autofocus type="text" id="name" name="name" value="<%= users.name %>" class="form-control shadow-none mb-3" >
     </div>
     <div class="mb-3">
        <label for="lastname" class="form-label">Prenoms:</label>
        <input  autofocus type="text" id="lastname" name="lastname" value="<%= users.lastname %>" class="form-control shadow-none mb-3" >
    </div>
    <div class="mb-3">
        <label for="username" class="form-label">Pseudo:</label>
        <input  autofocus type="text" id="username" name="username" value="<%= users.username %>" class="form-control shadow-none mb-3" >
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input  autofocus type="email" id="email" name="email" value="<%= users.email %>" class="form-control shadow-none mb-3" >
    </div>
     
   <div class="btt">
       <button type="submit" class="btn btn-primary"> Save</button>
       <a href="/usdelete/<%= users.id %>" class="btn btn-danger">Delete</a>
    </div>
 </form>
</div> 


<%- include('footer') -%> 
